<div class="container">
  <div class="row">
    <div class="col">
       
      <div class="col-sm-3 ml-5 mb-5">
        <h4 class="bg-light">配送先編集</h4>
      </div>

      <%= form_with model: @address do |f| %>
        <div class="form-group row">
          <div class="col-sm-3 mr-1">
            <%= f.label :postal_code, "郵便番号" %>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3 mr-1">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-sm-7">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3 mr-1">
            <%= f.label :name, "宛名" %>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-sm-3 ml-auto">
            <button type="submit" class="btn btn-success">変更内容を保存</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
