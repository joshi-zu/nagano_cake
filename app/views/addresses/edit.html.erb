<div class="container">
  <div class="row">
    <div class="col">
       
      <div class="col-sm-3 ml-5 mb-5">
        <h4 class="bg-light">配送先編集</h4>
      </div>

      <%= form_with model: @address do |f| %>
        <div class="form-group row">
          <label for="postal_code" class="col-sm-3 col-form-label">郵便番号</label>
          <div class="col-sm-4">
            <%= f.text_field :postal_code %>
          </div>
        </div>

        <div class="form-group row">
          <label for="address" class="col-sm-3 col-form-label">住所</label>
          <div class="col-sm-8">
            <%= f.text_field :address, size: "55" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="name" class="col-sm-3 col-form-label">宛名</label>
          <div class="col-sm-3">
            <%= f.text_field :name %>
          </div>
        </div>
        <button type="submit" class="btn btn-success">変更内容を保存</button>
      <% end %>
    </div>
  </div>
</div>
