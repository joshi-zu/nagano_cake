<div class="container">
  <div class="row">
    <div class="col-md-7">
      
      <div class="col-md-3 ml-5 mb-5">
        <h5 class="table-active">会員情報編集</h5>
      </div>

      <%= form_with model: @customer do |f| %>
        <div class="form-group row">
          <div class="col-md-2 ml-2">氏名</div>
          <div class="row mr-5 ml-5">
            <div class="col-md-11">
              <%= f.text_field :last_name, class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-11">
              <%= f.text_field :first_name, class:"form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-2 ml-2">フリガナ</div>
          <div class="row mr-5 ml-5">
            <div class="col-md-11">
              <%= f.text_field :last_name_kana, class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-11">
              <%= f.text_field :first_name_kana, class:"form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3 mt-2">
            <%= f.label :postal_code, "郵便番号" %>
          </div> 
          <div class="col-md-4">
            <%= f.text_field :postal_code, class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3 mt-2">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :address, class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3 mt-2">
            <%= f.label :phone_number, "電話番号" %>
          </div>
          <div class="col-md-4">
            <%= f.telephone_field :phone_number, class:"form-control" %>
          </div>
        </div>
  
        <div class="form-group row">
          <div class="col-md-3 mt-2">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-4">
            <%= f.email_field :email, class:"form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-4 mr-5">
            <button type="submit" class="btn btn-success">編集内容を保存</button>
          </div>
          <div class="col-md-3 ml-5">
            <%= link_to '退会する', unsubscribe_customers_path, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>