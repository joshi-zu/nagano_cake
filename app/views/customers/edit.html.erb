<div class="container">
  <div class="row">
    <div class="col-sm-7">
      
      <div class="col-sm-3 ml-5 mb-5">
        <h5 class="table-active">会員情報編集</h5>
      </div>

      <%= form_with model: @customer do |f| %>
        <div class="form-group row">
          <label for="name" class="col-sm-3 col-form-label">氏名</label>
          <div class="row mr-5 ml-1">
            <div class="col-sm-10">
              <%= f.text_field :last_name %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-10">
              <%= f.text_field :first_name %>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <label for="name_kana" class="col-sm-3 col-form-label">フリガナ</label>
          <div class="row mr-5 ml-1">
            <div class="col-sm-10">
              <%= f.text_field :last_name_kana %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-10">
              <%= f.text_field :first_name_kana %>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <label for="postal_code" class="col-sm-3 col-form-label">郵便番号</label>
          <div class="col-sm-4">
            <%= f.text_field :postal_code %>
          </div>
        </div>

        <div class="form-group row">
          <label for="address" class="col-sm-3 col-form-label">住所</label>
          <div class="col-sm-8">
            <%= f.text_field :address, size: "55" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="phone_number" class="col-sm-3 col-form-label">電話番号</label>
          <div class="col-sm-4">
            <%= f.telephone_field :phone_number %>
          </div>
        </div>
  
        <div class="form-group row">
          <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
          <div class="col-sm-4">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3"></div>
          <div class="col-sm-4 mr-5">
            <button type="submit" class="btn btn-success">編集内容を保存</button>
          </div>
          <div class="col-sm-3 ml-5">
            <%= link_to '退会する', customers_unsubscribe_path, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>