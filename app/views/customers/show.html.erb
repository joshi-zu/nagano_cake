<div class="container">
  <div class="row">
    <div class="col-md-7">
       
      <div class="row justify-content-center">
        <div class="col-md-8">
          <h4 class="col-md-5 text-center table-active">マイページ</h4>
        </div>
      </div>

      <div class="row my-4">
        <div class="col-md-2 pt-1">
          <h5 class="font-weight-bold">登録情報</h5>
        </div>
        <div class="col-md-3">
          <%= link_to '編集する', edit_customer_path(@customer.id), class: 'btn btn-success' %>
        </div>
      </div>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row" class="col-md-4 table-active">氏名</th>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <th scope="row" class="col-md-4 table-active">カナ</th>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th scope="row" class="col-md-4 table-active">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th scope="row" class="col-md-4 table-active">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th scope="row" class="col-md-4 table-active">電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th scope="row" class="col-md-4 table-active">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      
      <div class="row mt-4">
        <div class="col-md-2 pt-1">
          <h5 class="font-weight-bold">配送先</h5>
        </div>
        <div class="col-md-3">
          <%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary' %>
        </div>
      </div>
        
      <div class="row my-4">
        <div class="col-md-2 pt-1">
          <h5 class="font-weight-bold">注文履歴</h5>
        </div>
        <div class="col-md-3">
          <%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %>
        </div>
      </div>

    </div>
  </div>
</div>