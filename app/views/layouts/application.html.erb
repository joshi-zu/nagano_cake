<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/ed931dfcea.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm mb-4">
      <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/"><span><%= image_tag 'nagano_cupcake.jpg', size: "80x80" %></span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if admin_signed_in?  %>
            <li class="nav-item mr-5">
              <%= link_to '商品一覧', items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to '会員一覧', admin_customers_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to '注文履歴一覧', about_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to 'ジャンル一覧', about_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_admin_session_path, class: 'btn btn-outline-dark', method: :delete %>
            </li>

          <% elsif customer_signed_in? %>
            <li class="nav-item mr-5">
              <%= link_to 'マイページ', customer_path(current_customer), class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to '商品一覧', items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to 'カート', cart_items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_customer_session_path, class: 'btn btn-outline-dark', method: :delete %>
            </li>

          <% else %>
            <li class="nav-item mr-5">
              <%= link_to 'About', about_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to '商品一覧', items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to '新規登録', new_customer_registration_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', new_customer_session_path, class: 'btn btn-outline-dark' %>
            </li>

          <% end %>

        </ul>
        </div>
      </div>
      </nav>
    </header>

    

    <main class="mb-auto">
      <div class="d-flex justify-content-center mb-2" >
      </div>

      <%= yield %>
    </main>

    <footer class="bg-light">
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>@じょしーず</p>
          </div>
        </div>
      </div>
    </footer>
    
  </body>
</html>
