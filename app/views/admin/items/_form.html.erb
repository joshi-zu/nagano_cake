<div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
    <%= form_with(model: item, url: admin_items_path) do |form| %>

      <div class="form-group row">
        <label for="image" class="col-sm-3 col-form-label">商品画像</label>
        <div class="col-sm-8">
          <%= form.file_field :image, accept: "image/*", class: "form-control-file" %>
        </div>
      </div>

      <div class = "form-groupe row">
        <label for"name", class="col-sm-3 col-form-label">商品名</label>
        <div class="col-sm-8">
          <%= form.text_field :name,placeholder:"商品名", class:"form-control" %><br>
        </div>
      </div>

      <div class = "form-groupe row">
        <label for"introduction", class="col-sm-3 col-form-label">商品説明</label><br>
        <div class="col-sm-8">
          <%= form.text_area :introduction, placeholder:"ここに説明文を記述します", class:"form-control" %><br>
        </div>
      </div>

      <div class = "form-groupe row">
        <label for"genre", class="col-sm-3 col-form-label">ジャンル</label><br>
        <div class="col-sm-8">
          <%= form.collection_select :genre_id, Genre.all, :id, :name, include_blank: true %><br>
        </div>
      </div>

      <div class = "form-groupe row">
        <label for"price", class="col-sm-3 col-form-label">税抜価格</label><br>
        <div class="col-sm-8">
          <%= form.number_field :price,placeholder:"1000", class:"form-control" %><br>
        </div>
        <div class="col-sm-1">
          円
        </div>
      </div>

      <div class = "form-groupe row">
        <label for"is_active", class="col-sm-3 col-form-label">販売ステータス</label><br>
        <div class="col-sm-8">
          <%= form.radio_button :is_active, :true %>
          <%= form.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= form.radio_button :is_active, :false %>
          <%= form.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>
      </div>
      <%= form.submit '　新規登録　', class: "btn btn-sm btn-success" %>
    <% end %>
    </div>
  </div>
</div>