<div class = "container">
  <div class = "row">
    <div class = "col">
      <span class = "title bg-light" style="font-size: 2rem;">商品一覧<br></span>
    </div>
    <div class = "row style="text-align: right" ">
      <div class = "col-12">
        <p class = "button">
          <%= link_to new_admin_item_path do %>
            <i class="fa-solid fa-circle-plus fa-xl"></i>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <br>

    <div class = "row">
      <table class='table table-hover'>
        <thead>
          <tr class="bg-light">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th colspan="10"></th>
            <th>ステータス</th>
          <tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <span>
                  <%= item.id %>
                </span>
              </td>
              <td>
                <span>
                  <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                  <% end %>
                </span>
              </td>
              <td>
                <span>
                  <%= number_with_delimiter(item.price) %>
                </span>
              </td>
              <td>
                <span>
                  <%= item.genre&.name %>
                </span>
              </td>
              <td colspan="10">
              </td>
              <td>
                <span>
                  <%= item.is_active ? '販売中' : '販売停止中' %>
                </span>
              </td>
            </tr>
          <% end %>
          </tbody>
      </table>
      </dv>
    </div>
  </div>
</div>