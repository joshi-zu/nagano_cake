<div class = "container">
  <div class = "row">
    <div class = "col">
      <h3 class="title">商品一覧</h3><br>
    </div>
  </div>

    <div class = "row">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th colspan="10"></th>
            <th>ステータス</th>
          <tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <span>
                  <%= item.id %>
                </span>
              </td>
              <td>
                <span>
                  <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                  <% end %>
                </span>
              </td>
              <td>
                <span>
                  <%= item.price %>
                </span>
              </td>
              <td>
                <span>
                  <%= item.genre_id %>
                </span>
              </td>
              <td colspan="10">
              </td>
              <td>
                <span>
                  <%= item.is_active %>
                </span>
              </td>
            </tr>
            <% end %>
      </table>
      </dv>
    </div>
  </div>
</div?