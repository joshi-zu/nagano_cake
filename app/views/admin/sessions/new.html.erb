<div class="container">
  <div class="row">
    <div class="col">
      <span class="bg-light" style="font-size: 1.5rem;">管理者ログイン</span>
    </div>
  </div>
  <br>


  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <%= form_with model: @admin, url: admin_session_path do |f| %>

        <div class="form-group row">
          <label for="email" class="col-4 col-form-label">メールアドレス</label>
          <div class="col-sm-8">
            <%= f.text_field :email, class:"form-control" %><br>
          </div>
        </div>
      
        <div class="form-group row  justify-content-center">
          <label for="password" class="col-sm-4 col-form-label">パスワード</label>
          <div class="col-sm-8">
            <%= f.password_field :password, class:"form-control" %><br>
          </div>
        </div>
      
        <div class="row justify-content-center">
          <div class="mr-5">　　</div>
          <button type="submit" class="btn btn-primary col-sm-2 ml-5">ログイン</button>
        </div>
      <% end %>
    </div>
  </div>
</div>