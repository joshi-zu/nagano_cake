<div class = "container">
  <div class = "row">
    <div class = "col">
    <span class = "bg-light" style="font-size: 2rem;">注文履歴詳細</span>
    </div>
  </div>
  <br>

  <div class = "row info">
    <%= render 'information', order: @order %>
  </div>

  <div class = "row info">
    <br>
  </div>

  <div class = "row item">
    <div class = "col-6">
      
      <table >
        <thead>
          <tr class="table-active">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detail.amount %></td>
            <td>
              <%=  %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

    <div class = "col-3">
    </div>

    <div class = "col-2">
      <table>
        <tbody>
          <tr>
            <th>商品合計</th>
            <td>
              <span><%= @cart_items_price  %></span>
            </td>
          </tr>
          <tr>
            <th>送料</th>
            <td>
              <span><%= @shipping_cost %></span>
            </td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td>
              <span><%= @total_price %></span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    
  </div>

</div>