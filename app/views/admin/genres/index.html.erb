<div class = "container">
  <div class = "row">
    <div class = "col">
      <h3>ジャンル一覧・追加</h3>

      <%= form_with(model: @genre, url: admin_genres_path) do |form| %>
            <div class = "form-groupe row">
              <label for"name", class="col-sm-2 col-form-label">ジャンル名</label>
              <div class="col-sm-6">
                <%= form.text_field :name,placeholder:"ジャンル名", class:"form-control" %><br>
              </div>
              <div class="col-sm-1">
              <%= form.submit '　新規登録　', class: "btn btn-sm btn-success" %>
              </div>
            </div>
      <% end %>

      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <span>
                <%= genre.name %>
              </span>
            </td>
            <td>
              <%= link_to edit_admin_genre_path(genre.id) do %>
              <button type="edit" class="btn btn-sm btn-success">編集する　</button>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

