<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="col-md-2 table-active font-weight-bold text-center mb-5">ログイン</h3>

      <div class="row">
        <div class="col-md-4 ml-5">
          <h5 class="table-active text-center mb-5">会員の方はこちらからログイン</h5>
        </div>
      </div>
      <%= form_with model: @customer, url: customer_session_path do |f| %>
  
        <div class="form-group row  justify-content-center">
          <div class="col-md-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-4">
            <%= f.email_field :email, class:"form-control", placeholder: "sample@example.com" %>
          </div>
        </div>

        <div class="form-group row  justify-content-center">
          <div class="col-md-3">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="col-md-4">
            <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="mr-5">　　</div>
          <button type="submit" class="btn btn-primary col-md-2 ml-5">ログイン</button>
        </div>
      <% end %>

      <div class="mt-4 mb-2">
        <h5 class="col-md-3 table-active text-center mb-4 ml-5">会員登録がお済みでない方</h5>
        <div class="row justify-content-center">
          <div class="col-md-8">
            <p><%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。</p>
          </div>
      </div>
    </div>
  </div>
</div>