<div class="container">
  <div class="row">
    <div class="col">
      <h3>ログイン</h3>

      <div class="row">
        <div class="col-sm-9">
          <p>会員の方はこちらからログイン</p>
        </div>
      </div>
      <%= form_with model: @customer, url: customer_session_path do |f| %>
  
        <div class="form-group row">
          <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
          <div class="col-sm-4">
            <input type="email" class="form-control" id="email" name="customer[email]" placeholder="sample@example.com">
          </div>
        </div>

        <div class="form-group row">
          <label for="password" class="col-sm-3 col-form-label">パスワード</label>
          <div class="col-sm-4">
            <input type="password" class="form-control" id="password" name="customer[password]" autocomplete="new-password">
          </div>
        </div>

        <button type="submit" class="btn btn-primary">ログイン</button>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>